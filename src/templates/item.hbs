<li class="item">
  <div class="card">
    <img src="{{this.image}}" alt="{{this.name}}" class="card__image" />
    <div class="card__content">
      <h2 class="card__name">{{this.name}}</h2>
      <p class="card__price">
        <i class="material-icons">
        </i>
        {{this.price}} кредитов
      </p>
      <p class="card__desc">{{this.description}}</p>
      <ul class="tag-list">
        {{#each this.ingredients}}
        <li class="tag-list__item">{{this}}</li>
        {{/each}}
      </ul>
    </div>
    <button class="card__button button">
      <i class="material-icons button__icon">
      </i>
      В корзину
    </button>
  </div>
</li>